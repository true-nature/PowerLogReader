<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <sys:Double x:Key="SmallFontSize">10</sys:Double>
    <sys:Double x:Key="BasicFontSize">14</sys:Double>
    <sys:Double x:Key="BigFontSize">24</sys:Double>
    <sys:Double x:Key="MenuFontSize">16</sys:Double>

    <sys:Double x:Key="DateWidth">96</sys:Double>
    <sys:Double x:Key="DateTimeWidth">160</sys:Double>

    <Style TargetType="MenuItem">
        <Setter Property="FontSize" Value="{StaticResource MenuFontSize}"/>
    </Style>
</ResourceDictionary>