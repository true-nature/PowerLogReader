<UserControl x:Class="PowerLogReader.Modules.Views.MenuControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"             
             prism:ViewModelLocator.AutoWireViewModel="True">
    <Menu>
        <MenuItem Header="{DynamicResource FileMenuitem}">
            <MenuItem Header="{DynamicResource ExitMenuitem}" Command="{Binding ExitCommand}"/>
        </MenuItem>
        <MenuItem Header="{DynamicResource OptionMenuitem}">
            <MenuItem Header="{DynamicResource SettingsMenuitem}" Command="{Binding SettingsCommand}"/>
        </MenuItem>
        <MenuItem Header="{DynamicResource HelpMenuitem}">
            <MenuItem Header="{DynamicResource AboutMenuitem}" Command="{Binding AboutCommand}"/>
        </MenuItem>
    </Menu>
</UserControl>
